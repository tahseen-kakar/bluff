<%= render 'shared/card',
    title: 'Update Password',
    description: 'Enter your new password below',
    icon_name: 'key',
    footer: link_to("Back to sign in", new_session_path, 
        class: "text-secondary-400 hover:text-secondary-300 text-sm font-medium transition-colors duration-200 font-mono") do %>
  
  <%= form_with url: password_path(params[:token]), method: :put, class: "space-y-6" do |form| %>
    <% if alert = flash[:alert] %>
      <div class="bg-red-900/20 text-red-400 text-sm rounded-lg p-4 font-mono">
        <%= alert %>
      </div>
    <% end %>

    <%= render 'shared/form_field',
        form: form,
        field: :password,
        type: 'password',
        label: 'New Password',
        required: true,
        autofocus: true,
        autocomplete: 'new-password',
        placeholder: '••••••••',
        maxlength: 72 %>

    <%= render 'shared/form_field',
        form: form,
        field: :password_confirmation,
        type: 'password',
        label: 'Confirm Password',
        required: true,
        autocomplete: 'new-password',
        placeholder: '••••••••',
        maxlength: 72 %>

    <div class="pt-2">
      <%= render 'shared/button',
          type: 'submit',
          variant: 'primary',
          full_width: true,
          class: "bg-secondary-400 hover:bg-secondary-300 text-primary-900 py-4 text-base font-mono" do %>
        Update Password
      <% end %>
    </div>
  <% end %>
<% end %>
