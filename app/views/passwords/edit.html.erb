<div class="flex flex-col items-center justify-center">
  <div class="w-full max-w-md mx-auto">
    <div class="bg-primary-800/50 backdrop-blur-sm rounded-2xl border border-primary-700/50 shadow-2xl overflow-hidden">
      <div class="px-8 pt-8 pb-6">
        <div class="text-center mb-8">
          <div class="w-16 h-16 bg-primary-700/50 rounded-xl mx-auto mb-6 flex items-center justify-center">
            <svg class="w-8 h-8 text-secondary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
            </svg>
          </div>
          <h1 class="text-3xl font-bold text-primary-50 font-mono">Update Password</h1>
          <p class="text-primary-400 mt-2 font-mono">Enter your new password below</p>
        </div>

        <%= form_with url: password_path(params[:token]), method: :put, class: "space-y-6" do |form| %>
          <% if alert = flash[:alert] %>
            <div class="bg-red-900/20 text-red-400 text-sm rounded-lg p-4 font-mono">
              <%= alert %>
            </div>
          <% end %>

          <%= render 'shared/form_field',
              form: form,
              field: :password,
              type: 'password',
              label: 'New Password',
              required: true,
              autofocus: true,
              autocomplete: 'new-password',
              placeholder: '••••••••',
              maxlength: 72 %>

          <%= render 'shared/form_field',
              form: form,
              field: :password_confirmation,
              type: 'password',
              label: 'Confirm Password',
              required: true,
              autocomplete: 'new-password',
              placeholder: '••••••••',
              maxlength: 72 %>

          <div class="pt-2">
            <%= render 'shared/button',
                type: 'submit',
                variant: 'primary',
                full_width: true,
                class: "bg-secondary-400 hover:bg-secondary-300 text-primary-900 py-4 text-base font-mono" do %>
              Update Password
            <% end %>
          </div>
        <% end %>
      </div>

      <div class="px-8 py-4 text-center border-t border-primary-700/50">
        <%= link_to "Back to sign in", new_session_path, 
            class: "text-secondary-400 hover:text-secondary-300 text-sm font-medium transition-colors duration-200 font-mono" %>
      </div>
    </div>
  </div>
</div>
