<%# 
  Locals:
  - title: String (required)
  - count: Integer (required)
  - icon: String (required)
  - path: String (optional) - If provided, makes the card clickable
%>

<% if local_assigns[:path].present? %>
  <%= link_to path, class: "bg-primary-800/50 backdrop-blur-sm rounded-xl border border-primary-700/50 p-4 hover:bg-primary-700/50 transition-colors duration-200" do %>
    <div class="flex items-center justify-between">
      <h3 class="text-primary-400 font-mono text-sm"><%= title %></h3>
      <%= tabler_icon(icon, size: 20, class: 'text-secondary-400') %>
    </div>
    <p class="text-xl font-bold text-primary-50 font-mono mt-1 text-left">
      <%= count %>
    </p>
  <% end %>
<% else %>
  <div class="bg-primary-800/50 backdrop-blur-sm rounded-xl border border-primary-700/50 p-4">
    <div class="flex items-center justify-between">
      <h3 class="text-primary-400 font-mono text-sm"><%= title %></h3>
      <%= tabler_icon(icon, size: 20, class: 'text-secondary-400') %>
    </div>
    <p class="text-xl font-bold text-primary-50 font-mono mt-1 text-left">
      <%= count %>
    </p>
  </div>
<% end %> 