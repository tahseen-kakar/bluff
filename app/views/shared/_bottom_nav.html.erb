<%# Only show bottom nav when we have a current table %>
<% if @table %>
  <nav class="fixed bottom-6 left-1/2 transform -translate-x-1/2 bg-primary-800/90 backdrop-blur-sm border border-primary-700/50 rounded-full px-2 py-1 shadow-lg shadow-primary-900/50">
    <div class="flex items-center space-x-1">
      <%= link_to app_path, 
          class: "flex flex-col items-center px-4 py-2 rounded-full #{current_page?(app_path) ? 'bg-primary-700/70 text-secondary-400' : 'text-primary-400 hover:text-primary-50'} transition-colors duration-200" do %>
        <%= tabler_icon('chart-line', size: 20) %>
        <span class="text-xs mt-1 font-mono">Stats</span>
      <% end %>

      <%= link_to table_players_path(@table), 
          class: "flex flex-col items-center px-4 py-2 rounded-full #{controller_name == 'players' ? 'bg-primary-700/70 text-secondary-400' : 'text-primary-400 hover:text-primary-50'} transition-colors duration-200" do %>
        <%= tabler_icon('users', size: 20) %>
        <span class="text-xs mt-1 font-mono">Players</span>
      <% end %>

      <%= link_to table_game_sessions_path(@table), 
          class: "flex flex-col items-center px-4 py-2 rounded-full #{controller_name == 'game_sessions' ? 'bg-primary-700/70 text-secondary-400' : 'text-primary-400 hover:text-primary-50'} transition-colors duration-200" do %>
        <%= tabler_icon('clock-play', size: 20) %>
        <span class="text-xs mt-1 font-mono">Sessions</span>
      <% end %>

      <%= link_to table_game_formats_path(@table), 
          class: "flex flex-col items-center px-4 py-2 rounded-full #{controller_name == 'game_formats' ? 'bg-primary-700/70 text-secondary-400' : 'text-primary-400 hover:text-primary-50'} transition-colors duration-200" do %>
        <%= tabler_icon('cards', size: 20) %>
        <span class="text-xs mt-1 font-mono">Formats</span>
      <% end %>
    </div>
  </nav>
<% end %> 