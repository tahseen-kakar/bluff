<%# 
  Locals:
  - title: String (required) - Main title text
  - context: String (optional) - Additional context (e.g., table name)
  - description: String (required) - Subtitle/description text
%>

<div class="mb-8">
  <h1 class="text-2xl font-medium text-primary-50 font-mono mb-2">
    <%= title %>
    <% if local_assigns[:context].present? %>
      for <%= context %>
    <% end %>
  </h1>
  <p class="text-primary-400 font-mono">
    <%= description %>
  </p>
</div> 