<%= render 'shared/card',
    title: 'Welcome Back',
    description: 'Sign in to manage your poker games',
    icon_name: 'key',
    footer: link_to("Forgot your password?", new_password_path, 
        class: "text-secondary-400 hover:text-secondary-300 text-sm font-medium transition-colors duration-200 font-mono") do %>
  
  <%= form_with url: session_path, class: "space-y-6" do |form| %>
    <% if alert = flash[:alert] %>
      <div class="bg-red-900/20 text-red-400 text-sm rounded-lg p-4 font-mono">
        <%= alert %>
      </div>
    <% end %>

    <%= render 'shared/form_field',
        form: form,
        field: :email_address,
        type: 'email',
        label: 'Email',
        required: true,
        autofocus: true,
        autocomplete: 'username',
        placeholder: 'you@example.com' %>

    <%= render 'shared/form_field',
        form: form,
        field: :password,
        type: 'password',
        label: 'Password',
        required: true,
        autocomplete: 'current-password',
        placeholder: '••••••••',
        maxlength: 72 %>

    <div class="pt-2">
      <%= render 'shared/button',
          type: 'submit',
          variant: 'primary',
          full_width: true,
          class: "bg-secondary-400 hover:bg-secondary-300 text-primary-900 py-4 text-base font-mono" do %>
        Sign in
      <% end %>
    </div>
  <% end %>
<% end %>
