<div class="flex flex-col items-center justify-center">
  <div class="w-full max-w-md mx-auto">
    <div class="bg-primary-800 rounded-lg border border-primary-700 shadow-xl overflow-hidden">
      <div class="p-8">
        <div class="text-center mb-8">
          <div class="w-20 h-20 bg-primary-700 rounded-lg mx-auto mb-6 flex items-center justify-center">
            <svg class="w-10 h-10 text-secondary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
            </svg>
          </div>
          <h1 class="text-2xl font-bold text-primary-50">Welcome Back</h1>
          <p class="text-primary-400 mt-2 font-body">Sign in to manage your poker games</p>
        </div>

        <%= form_with url: session_url, class: "space-y-6" do |form| %>
          <% if alert = flash[:alert] %>
            <div class="bg-red-900/20 text-red-400 text-sm rounded-lg p-4">
              <%= alert %>
            </div>
          <% end %>

          <% if notice = flash[:notice] %>
            <div class="bg-green-900/20 text-green-400 text-sm rounded-lg p-4">
              <%= notice %>
            </div>
          <% end %>

          <div class="space-y-2">
            <%= form.label :email_address, "Email", class: "block text-sm font-medium text-primary-300" %>
            <%= form.email_field :email_address, 
                required: true,
                autofocus: true,
                autocomplete: "username",
                placeholder: "you@example.com",
                value: params[:email_address],
                class: "mt-1 block w-full rounded-lg border-primary-600 bg-primary-700 text-primary-200 placeholder-primary-500 focus:border-secondary-400 focus:ring focus:ring-secondary-400 focus:ring-opacity-50 text-sm font-body" %>
          </div>

          <div class="space-y-2">
            <%= form.label :password, class: "block text-sm font-medium text-primary-300" %>
            <%= form.password_field :password,
                required: true,
                autocomplete: "current-password",
                placeholder: "••••••••",
                maxlength: 72,
                class: "mt-1 block w-full rounded-lg border-primary-600 bg-primary-700 text-primary-200 placeholder-primary-500 focus:border-secondary-400 focus:ring focus:ring-secondary-400 focus:ring-opacity-50 text-sm font-body" %>
          </div>

          <div>
            <%= render 'shared/button', 
                variant: 'primary',
                type: 'submit',
                full_width: true do %>
              Sign in
            <% end %>
          </div>
        <% end %>
      </div>

      <div class="bg-primary-700/50 px-8 py-4 border-t border-primary-600">
        <div class="text-center text-sm">
          <%= link_to "Forgot your password?", new_password_path, 
              class: "text-secondary-400 hover:text-secondary-300 font-medium transition-colors duration-200" %>
        </div>
      </div>
    </div>
  </div>
</div>
