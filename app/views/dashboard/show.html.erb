<%# Main container %>
<div class="min-h-screen bg-primary-900">
  <%# Page content %>
  <main class="max-w-6xl mx-auto px-4 py-6">
    <%# Header %>
    <%= render 'shared/header' %>

    <%# Stats cards %>
    <div class="grid grid-cols-2 gap-4 mb-6">
      <div class="bg-primary-800/50 backdrop-blur-sm rounded-xl border border-primary-700/50 p-4">
        <div class="flex items-center justify-between">
          <h3 class="text-primary-400 font-mono text-sm">Total Games</h3>
          <%= tabler_icon('cards', size: 20, class: 'text-secondary-400') %>
        </div>
        <p class="text-xl font-bold text-primary-50 font-mono mt-1">24</p>
      </div>

      <div class="bg-primary-800/50 backdrop-blur-sm rounded-xl border border-primary-700/50 p-4">
        <div class="flex items-center justify-between">
          <h3 class="text-primary-400 font-mono text-sm">Active Players</h3>
          <%= tabler_icon('users', size: 20, class: 'text-secondary-400') %>
        </div>
        <p class="text-xl font-bold text-primary-50 font-mono mt-1">8</p>
      </div>

      <div class="bg-primary-800/50 backdrop-blur-sm rounded-xl border border-primary-700/50 p-4">
        <div class="flex items-center justify-between">
          <h3 class="text-primary-400 font-mono text-sm">Total Hours</h3>
          <%= tabler_icon('clock', size: 20, class: 'text-secondary-400') %>
        </div>
        <p class="text-xl font-bold text-primary-50 font-mono mt-1">156</p>
      </div>

      <div class="bg-primary-800/50 backdrop-blur-sm rounded-xl border border-primary-700/50 p-4">
        <div class="flex items-center justify-between">
          <h3 class="text-primary-400 font-mono text-sm">Win Rate</h3>
          <%= tabler_icon('chart-line', size: 20, class: 'text-secondary-400') %>
        </div>
        <p class="text-xl font-bold text-primary-50 font-mono mt-1">62%</p>
      </div>
    </div>
  </main>

  <%# Bottom Navigation %>
  <%= render 'shared/bottom_nav' %>
</div> 