<%# Main container %>
<div class="min-h-screen bg-primary-900">
  <%# Header %>
  <header class="fixed top-0 left-0 right-0 h-16 bg-primary-800/50 backdrop-blur-sm border-b border-primary-700/50 z-10">
    <div class="h-full px-6 flex items-center justify-between">
      <div class="flex items-center space-x-3">
        <%= tabler_icon('cards', size: 24, class: 'text-secondary-400') %>
        <span class="text-xl font-bold text-primary-50 font-mono">Bluff</span>
      </div>
      
      <div class="flex items-center space-x-4">
        <button class="p-2 text-primary-400 hover:text-primary-50 rounded-lg hover:bg-primary-700/30 transition-colors duration-200">
          <%= tabler_icon('bell', size: 20) %>
        </button>
        <button class="p-2 text-primary-400 hover:text-primary-50 rounded-lg hover:bg-primary-700/30 transition-colors duration-200">
          <%= tabler_icon('settings', size: 20) %>
        </button>
      </div>
    </div>
  </header>

  <%# Page content %>
  <main class="pt-20 px-6 pb-24">
    <%# Stats cards %>
    <div class="grid grid-cols-2 gap-4 mb-6">
      <div class="bg-primary-800/50 backdrop-blur-sm rounded-xl border border-primary-700/50 p-4">
        <div class="flex items-center justify-between">
          <h3 class="text-primary-400 font-mono text-sm">Total Games</h3>
          <%= tabler_icon('cards', size: 20, class: 'text-secondary-400') %>
        </div>
        <p class="text-xl font-bold text-primary-50 font-mono mt-1">24</p>
      </div>

      <div class="bg-primary-800/50 backdrop-blur-sm rounded-xl border border-primary-700/50 p-4">
        <div class="flex items-center justify-between">
          <h3 class="text-primary-400 font-mono text-sm">Active Players</h3>
          <%= tabler_icon('users', size: 20, class: 'text-secondary-400') %>
        </div>
        <p class="text-xl font-bold text-primary-50 font-mono mt-1">8</p>
      </div>

      <div class="bg-primary-800/50 backdrop-blur-sm rounded-xl border border-primary-700/50 p-4">
        <div class="flex items-center justify-between">
          <h3 class="text-primary-400 font-mono text-sm">Total Hours</h3>
          <%= tabler_icon('clock', size: 20, class: 'text-secondary-400') %>
        </div>
        <p class="text-xl font-bold text-primary-50 font-mono mt-1">156</p>
      </div>

      <div class="bg-primary-800/50 backdrop-blur-sm rounded-xl border border-primary-700/50 p-4">
        <div class="flex items-center justify-between">
          <h3 class="text-primary-400 font-mono text-sm">Win Rate</h3>
          <%= tabler_icon('chart-line', size: 20, class: 'text-secondary-400') %>
        </div>
        <p class="text-xl font-bold text-primary-50 font-mono mt-1">62%</p>
      </div>
    </div>

    <%# Recent activity %>
    <div class="bg-primary-800/50 backdrop-blur-sm rounded-xl border border-primary-700/50 p-4">
      <div class="flex items-center justify-between mb-4">
        <h2 class="text-lg font-bold text-primary-50 font-mono">Recent Activity</h2>
        <button class="text-secondary-400 hover:text-secondary-300 font-mono text-sm">View all</button>
      </div>

      <div class="space-y-3">
        <div class="flex items-center space-x-4 p-3 rounded-lg bg-primary-700/30">
          <%= tabler_icon('cards', size: 20, class: 'text-secondary-400') %>
          <div class="flex-1">
            <h4 class="text-primary-50 font-mono text-sm">Friday Night Game</h4>
            <p class="text-xs text-primary-400 font-mono">Dec 15, 2023 • 4 players</p>
          </div>
          <span class="text-green-400 font-mono text-sm">+$245</span>
        </div>

        <div class="flex items-center space-x-4 p-3 rounded-lg bg-primary-700/30">
          <%= tabler_icon('cards', size: 20, class: 'text-secondary-400') %>
          <div class="flex-1">
            <h4 class="text-primary-50 font-mono text-sm">Weekend Tournament</h4>
            <p class="text-xs text-primary-400 font-mono">Dec 10, 2023 • 8 players</p>
          </div>
          <span class="text-red-400 font-mono text-sm">-$120</span>
        </div>
      </div>
    </div>
  </main>

  <%# Bottom Navigation %>
  <%= render 'shared/bottom_nav' %>
</div> 