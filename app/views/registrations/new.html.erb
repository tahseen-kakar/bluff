<div class="min-h-screen flex items-center justify-center">
  <%= render 'shared/card',
      title: 'Create Account',
      description: 'Sign up to start tracking your poker games',
      icon_name: 'user-plus',
      footer: link_to("Already have an account? Sign in", sign_in_path, 
          class: "text-secondary-400 hover:text-secondary-300 text-sm font-medium transition-colors duration-200 font-mono") do %>
    
    <%= form_with model: @user, url: sign_up_path, class: "space-y-6" do |form| %>
      <% if @user.errors.any? %>
        <div class="bg-red-900/20 text-red-400 text-sm rounded-lg p-4 font-mono">
          <ul class="list-disc list-inside space-y-1">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= render 'shared/form_field',
          form: form,
          field: :name,
          label: 'Full Name',
          required: true,
          autofocus: true,
          placeholder: 'John Smith',
          maxlength: 100 %>

      <%= render 'shared/form_field',
          form: form,
          field: :username,
          label: 'Username',
          required: true,
          placeholder: 'johnsmith',
          maxlength: 50,
          hint: 'Choose a unique username for your account' %>

      <%= render 'shared/form_field',
          form: form,
          field: :email_address,
          type: 'email',
          label: 'Email Address',
          required: true,
          placeholder: 'john@example.com',
          autocomplete: 'email' %>

      <%= render 'shared/form_field',
          form: form,
          field: :password,
          type: 'password',
          label: 'Password',
          required: true,
          placeholder: '••••••••',
          maxlength: 72,
          autocomplete: 'new-password' %>

      <%= render 'shared/form_field',
          form: form,
          field: :password_confirmation,
          type: 'password',
          label: 'Confirm Password',
          required: true,
          placeholder: '••••••••',
          maxlength: 72,
          autocomplete: 'new-password' %>

      <div class="pt-2">
        <%= render 'shared/button',
            type: 'submit',
            variant: 'primary',
            full_width: true,
            class: "bg-secondary-400 hover:bg-secondary-300 text-primary-900 py-4 text-base font-mono" do %>
          Create Account
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
